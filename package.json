{
  "name": "typycopilot",
  "displayName": "TyPy Copilot",
  "description": "Visual Studio Code extension to support writing code using Taipy",
  "version": "1.0.2",
  "publisher": "TyPy",
  "engines": {
    "vscode": "^1.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.insertGhostText",
        "title": "typycopilot"
      }
    ],
    "keybindings": [
      {
        "command": "extension.insertGhostText",
        "key": "tab",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "TyPy Copilot Configuration",
      "properties": {
        "typycopilot.CONTEXT_LENGTH": {
          "type": "number",
          "default": 24,
          "description": "Maximum length of ghost text."
        },
        "typycopilot.DELAY_SECONDS": {
          "type": "number",
          "default": 1,
          "description": "Delay in seconds before triggering API call."
        },
        "typycopilot.API_URL": {
          "type": "string",
          "default": "https://immense-mastiff-incredibly.ngrok-free.app/api/generate",
          "description": "API URL for fetching ghost text."
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "YOUR_GIT_REPO_URL"
  },
  "icon": "icon.png",
  "browserslist": {
    "production": [
      "last 1 chrome version"
    ],
    "development": [
      "last 1 chrome version"
    ]
  },
  "scripts": {},
  "dependencies": {
    "axios": "^1.6.0"
  }
}
